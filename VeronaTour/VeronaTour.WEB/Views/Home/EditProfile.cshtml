@model VeronaTour.WEB.Models.EditUserViewModel

<!-- banner -->
<div class="banner_inner">
    <div class="services-breadcrumb">
        <div class="inner_breadcrumb">
            <ul class="short">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                    <i>|</i>
                </li>
                <li>
                    @Html.ActionLink("Profile", "Profile", "Home")
                    <i>|</i>
                </li>
                <li>Edit your profile</li>
            </ul>
        </div>
    </div>
</div>
<!--//banner -->
<!--EditProfile-->
<div class="wrap" style=" margin-top: 50px; margin-bottom: 50px">
    <div class="login p-5 bg-dark mx-auto mw-100">
        @using (Html.BeginForm("EditProfile", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            foreach (ModelState modelState in ViewData.ModelState.Values)
            {
                foreach (ModelError error in modelState.Errors)
                {
                    <p class="text-danger font-weight-bold text-center ">@error.ErrorMessage</p>
                }
            }
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Veronika Korzhevykh", @required = "true" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Phone, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "+19736459287", @required = "true", id = "phone" })
                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "veronikafacep@gmail.com", @required = "true" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password", onkeyup = "Latin(this);", @required = "true" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = " control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Repead your password", onkeyup = "Latin(this);", @required = "true" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary submit mb-3 mt-3">Save changes</button>
            </div>
        }
    </div>
</div>
<!--//EditProfile-->