@model VeronaTour.BLL.DTOs.HotelDTO

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Edit hotel
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Admin")">
                <i class="fa fa-dashboard"></i> Home
            </a>
        </li>
        <li>
            <a href="@Url.Action("Hotels", "Admin")">
                <i class="fa fa-dashboard"></i> Hotels list
            </a>
        </li>
        <li class="active">Edit hotel</li>
    </ol>
</section>
<!-- //Content Header -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                @using (Html.BeginForm("EditHotel", "Admin", FormMethod.Post, new { id = "add" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = " col-form-label-lg" })
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group ">
                            @Html.LabelFor(model => model.StarsCount, htmlAttributes: new { @class = "col-form-label-lg" })
                            @Html.DropDownListFor(model => model.StarsCount, new SelectList(new List<int> { 1, 2, 3, 4, 5 }), htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.StarsCount, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = " col-form-label-lg" })
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @rows = 5 } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-success">Edit hotel</button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- //content -->
